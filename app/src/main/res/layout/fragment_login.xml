<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dark.pro.chat_meister.Login">

    <!-- TODO: Update blank fragment layout -->


    <EditText
        android:drawableStart="@drawable/ic_person_black_24dp"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:id="@+id/login_uname"
        android:background="@drawable/edittext"
        android:hint="Username"
        android:textAlignment="center"
        />


    <EditText
        android:drawableStart="@drawable/ic_lock_black_24dp"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:id="@+id/login_pass"
        android:layout_below="@+id/login_uname"
        android:background="@drawable/edittext"
        android:hint="Password"
        android:textAlignment="center"
        android:inputType="textPassword"/>

    <Button
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:text="Login"
        android:id="@+id/login_frag_btn"
        android:layout_below="@+id/login_pass"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="@drawable/all_buttons"/>

    <Button
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:text="Register"
        android:id="@+id/login_frag_regbtn"
        android:onClick="RegisterUser"
        android:layout_below="@+id/login_frag_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="@drawable/all_buttons"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password"
        android:textSize="15dp"
        android:onClick="forgot"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_below="@+id/login_frag_regbtn"
        android:id="@+id/txt_pass_forgot"
        android:layout_marginTop="15dp"
        android:clickable="true"/>

</RelativeLayout>
